load("@rules_fuchsia//fuchsia:defs.bzl", "fuchsia_component", "fuchsia_component_manifest", "fuchsia_package", "fuchsia_package_archive")

fuchsia_component_manifest(
    name = "gapii_component_manifest",
    src = "gapii.cml",
    includes = [ "application.shard.cml" ],
)

fuchsia_component(
    name = "gapii_component",
    manifest = ":gapii_component_manifest",
    deps = ["//gapii/cc:libgapii"],
)

fuchsia_package(
    name = "gapii",
    deps = [":gapii_component"],
)

fuchsia_package_archive(
    name = "gapii_far",
    package = ":gapii",
    archive_name = "gapii.far"
)
