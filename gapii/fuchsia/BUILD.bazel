load("@rules_fuchsia//fuchsia:defs.bzl", "fuchsia_cc_binary", "fuchsia_component", "fuchsia_component_manifest", "fuchsia_package", "fuchsia_package_resource")

fuchsia_cc_binary(
    name = "gapii_server",
    srcs = ["gapii_server.cc"],
    deps = [
        "@fuchsia_sdk//fidl/fuchsia.io:fuchsia.io_cc",
        "@fuchsia_sdk//fidl/fuchsia.ldsvc:fuchsia.ldsvc_cc",
        "@fuchsia_sdk//pkg/async-loop-cpp",
        "@fuchsia_sdk//pkg/async-loop-default",
        "@fuchsia_sdk//pkg/fdio",
        "@fuchsia_sdk//pkg/vfs_cpp",
    ],
    sdk_root_label = "@fuchsia_sdk",
)

fuchsia_component_manifest(
    name = "manifest",
    src = "gapii-server.cml",
)

fuchsia_component(
    name = "gapii-server",
    manifest = ":manifest",
    deps = [
        ":gapii_server",
        "//gapii/cc:libgapii",
    ],
)

fuchsia_package_resource(
    name = "graphics_spy_json",
    src = "//gapii/vulkan/vk_graphics_spy/cc:json",
    dest = "data/vulkan/explicit_layer.d/GraphicsSpyLayer.json",
)

fuchsia_package(
    name = "gapii",
    deps = [
        ":gapii-server",
        ":graphics_spy_json",
    ],
)

